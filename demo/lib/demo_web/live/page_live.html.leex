<header class="header">
  <h2>a simple elixir charting library</h2>
  <h1>LiveChart</h1>
</header>
<div class="card__grid">
  <div class="card">
    <%= live_component @socket, LiveChartWeb.LivePieComponent, chart: %LiveChart.BaseChart{title: "My awesome chart"} %>
  </div>
  <div class="card">
    <%= live_component @socket, LiveChartWeb.LiveColumnComponent, chart: @column_chart %>
  </div>
</div>
